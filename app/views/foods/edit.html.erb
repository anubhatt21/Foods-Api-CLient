<h1> Edit Food Entry </h1>
<%= form_tag "/foods/#{@food["id"]}", method: :patch do %>
  <div>
    Food Name: <input type="text" name="form_name" value="<%= @food["name"] %>">
  </div>
  <div>
    Origin: <input type="text" name="form_origin" value="<%= @food["origin"] %>">
  </div>
<input type="submit" value="Update Food Entry">
 <% end %>

<%= form_tag "/foods/#{@food["id"]}", method: :delete do %>
<input type="submit" value="Delete Food Entry">
 <% end %>
